{
  "name": "ers-api",
  "description": "The ERS API provides an API to retrieve content and facilitate login with myERS",
  "version": "0.1.2",
  "homepage": "https://api.ersnet.org",
  "main": "src",
  "keywords": [
    "feathers",
    "Cloud CMS"
  ],
  "author": {
    "name": "idealley",
    "email": "samuelpouyt@gmail.com"
  },
  "contributors": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EuropeanRespiratorySociety/api-ers.git"
  },
  "bugs": {
    "url": "https://github.com/EuropeanRespiratorySociety/api-ers/issues"
  },
  "directories": {
    "lib": "src"
  },
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 5.0.0"
  },
  "scripts": {
    "test": "npm run eslint && nyc --require babel-core/register npm run mocha",
    "test:single": "nyc --require babel-core/register npm run mocha:helpers:single",
    "eslint": "eslint src/. test/. --config .eslintrc.json",
    "start": "node src/",
    "mocha": "mocha ./test/ --recursive --exit",
    "mocha:filters": "mocha test/services/filters.test.js",
    "mocha:class": "mocha test/classes",
    "mocha:hooks": "mocha ./test/hooks --recursive --exit",
    "mocha:hooks:watch": "mocha ./test/hooks --recursive",
    "mocha:webhook": "mocha test/webhook --recursive --watch",
    "mocha:helpers": "mocha test/helpers --recursive",
    "mocha:helpers:single": "mocha test/helpers/formatNotification.test.js --watch",
    "mocha:watch": "mocha test/ --recursive --watch",
    "mocha:single": "mocha test/services/notification.test.js --watch",
    "coverage": "nyc report --reporter=text",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "codecov": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "dependencies": {
    "@feathersjs/authentication": "^2.1.6",
    "@feathersjs/authentication-client": "^1.0.2",
    "@feathersjs/authentication-jwt": "^2.0.1",
    "@feathersjs/authentication-local": "^1.2.1",
    "@feathersjs/configuration": "^1.0.2",
    "@feathersjs/errors": "^3.3.0",
    "@feathersjs/express": "^1.2.3",
    "@feathersjs/feathers": "^3.1.6",
    "@feathersjs/rest-client": "^1.4.0",
    "@feathersjs/socketio": "^3.2.2",
    "axios": "^0.18.0",
    "babel": "^6.23.0",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.1",
    "compression": "^1.7.2",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "elasticsearch": "^15.0.0",
    "ers-utils": "^0.2.7",
    "feathers-authentication-hooks": "^0.3.0",
    "feathers-hooks-common": "^4.12.0",
    "feathers-hooks-rediscache": "^1.1.3",
    "feathers-mongoose": "^6.1.2",
    "feathers-permissions": "^0.2.1",
    "feathers-swagger": "^0.7.1",
    "gitana": "^1.0.257",
    "graphql": "^14.0.0-rc.1",
    "graphql-server-express": "^1.3.6",
    "graphql-tools": "^3.0.0",
    "helmet": "^3.12.1",
    "mongodb": "^3.0.10",
    "mongoose": "^5.1.5",
    "proxy-agent": "^3.0.0",
    "redis": "^2.8.0",
    "request-promise": "^4.2.2",
    "sanitize-html": "^1.18.2",
    "serve-favicon": "^2.5.0",
    "validator": "^10.3.0",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "coveralls": "^3.0.1",
    "eslint": "^5.0.1",
    "istanbul": "^0.4.5",
    "istanbul-middleware": "^0.2.2",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "request": "^2.87.0"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
